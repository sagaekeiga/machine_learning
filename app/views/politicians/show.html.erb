

<div class="ui two column centered grid">
  <div class="column">
        <table class="ui celled striped table">
          <thead>
            <tr><th colspan="3">
              <%= @politician.name %>
            </th>
          </tr></thead>
          <tbody>
            <tr>
              <td>ID</td>
              <td><%= @politician.id %></td>
            </tr>
            <tr>
              <td class="collapsing">イメージ</td>
              <td><%= image_tag(@politician.image, :class => "ui fluid image") if !@politician.image.nil? %></td>
            </tr>            
            <tr>
              <td>名前</td>
              <td><%= @politician.name %></td>
            </tr>
            <tr>
              <td>年齢</td>
              <td><%= @politician.age %></td>
            </tr>
            <tr>
              <td>党派</td>
              <td><%= @politician.party %></td>
            </tr>
            <tr>
              <td>職業</td>
              <td><%= @politician.occupation %></td>
            </tr>
            <tr>
              <td>新/現/元</td>
              <td><%= @politician.status %></td>
            </tr>
            <tr>
              <td>得票数</td>
              <td><%= @politician.vote %></td>
            </tr>
            <tr>
              <td>当落</td>
              <td><%= @politician.election %></td>
            </tr>            
            <tr>
              <td>スイッチ</td>
              <td><%= @politician.switch %></td>
            </tr>
            </tbody>
        </table>
        <% @machines.each do |tweet| %>
        <div class="ui raised segment">
           ID:<%= tweet.id %><br>
           Date:<%= tweet.date %><br>
           <%= "Tweet:" + tweet.tweet %><br>
           <%= "Nama:" + tweet.name %><br>
           <%= "Text:" + tweet.text %><br>
           Geo:<%= tweet.geo %><br>
        </div>
        <% end %>
</div>
</div>
