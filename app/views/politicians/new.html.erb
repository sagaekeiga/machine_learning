<% if @politician.errors.any? %>
  <div class="ui negative message">
  <i class="close icon"></i>
    <% @politician.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  </div>
<% end %>

<div class="ui grid">
  <div class="three column row">
    <div class="column"></div>
    <div class="column">
        <%= form_for(@politician, html: {class: 'ui form'}) do |f| %>
        <div class="ui raised segment">
            
            <div class="field">
              <label>名前</label>
              <%= f.text_field :name, class: "" %>
            </div>
            
            
            <div class="field">
              <label>年齢</label>
              <%= f.select :age,  options_for_select((1..90).to_a, 60), {}, { class: 'ui fluid dropdown' } %>
            </div>
            
            <div class="field">
              <label>画像</label>
              <%= f.text_field :image, class: "" %>
            </div>
            
            <div class="field">
              <label>党派</label>
              <%= f.select :party,  options_for_select(["自由民主党", "民進党", "公明党", "日本共産党", "日本維新の会", "自由党 ", "社会民主党", "日本のこころ", "沖縄社会大衆党", "新党大地", "無所属", "その他"]), {}, { class: 'ui fluid dropdown' } %>
            </div>
            
            <div class="field">
              <label>職業</label>
              <%= f.text_field :occupation, class: "" %>
            </div>
            
            <div class="field">
              <label>新/現/元</label>
              <%= f.select :status,  options_for_select(["新", "現", "元"]), {}, { class: 'ui fluid dropdown' } %>
            </div>
            
            
            <div class="field">
              <label>得票数</label>
              <%= f.text_field :vote, class: "" %>
            </div>
            
            
            <div class="field">
              <label>当落</label>
              <%= f.select :election,  options_for_select(["当選", "落選"]), {}, { class: 'ui fluid dropdown' } %>
            </div>
        
            
          <div class="actions">
            <%= f.submit "登録", class: 'ui button'%>
          </div>
        </div>
        <% end %>
    </div>
    <div class="column"></div>
</div>
